<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/sky_blue"
    tools:context=".TambahUserActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form User"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/dark_blue"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/userViewImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingEnd="10dp"
            android:src="@drawable/user" />
        <Button
            android:id="@+id/btnUploadGambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload gambar"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_blue"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_box"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id User"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>
        <EditText
            android:id="@+id/inputIdUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="12sp"
            android:textColor="@color/dark_blue"
            android:background="@drawable/custom_input"
            android:inputType="textPersonName"
            android:hint="Masukkan Id Anda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>
        <EditText
            android:id="@+id/inputNama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="12sp"
            android:textColor="@color/dark_blue"
            android:background="@drawable/custom_input"
            android:inputType="textPersonName"
            android:hint="Masukkan nama Anda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="12sp"
            android:inputType="textEmailAddress"
            android:textColor="@color/dark_blue"
            android:background="@drawable/custom_input"
            android:hint="Masukkan email Anda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/inputUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/custom_input"
            android:textSize="12sp"
            android:inputType="textPersonName"
            android:textColor="@color/dark_blue"
            android:hint="Masukkan username Anda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/inputAlamat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="12sp"
            android:background="@drawable/custom_input"
            android:inputType="textPersonName"
            android:textColor="@color/dark_blue"
            android:layout_marginBottom="10dp"
            android:hint="Masukkan alamat Anda" />
    </LinearLayout>

    <Button
        android:id="@+id/btnTambahUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:padding="10dp"
        android:backgroundTint="@color/dark_blue"
        android:textColor="@color/white"

        android:layout_gravity="center"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
        />

</LinearLayout>